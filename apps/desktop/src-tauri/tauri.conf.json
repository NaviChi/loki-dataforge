{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Loki Data Forge",
  "version": "0.1.0",
  "identifier": "com.loki.dataforge",
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Loki Data Forge",
        "width": 1400,
        "height": 920,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 980,
        "minHeight": 680
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "deb", "rpm", "appimage", "msi", "nsis"],
    "icon": ["icons/icon.png"],
    "shortDescription": "Cross-platform data recovery toolkit",
    "category": "Utility",
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libwebkit2gtk-4.1-0",
          "libayatana-appindicator3-1"
        ]
      },
      "rpm": {
        "depends": [
          "gtk3",
          "webkit2gtk4.1",
          "libayatana-appindicator"
        ]
      }
    }
  }
}
